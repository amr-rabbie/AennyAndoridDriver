<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".ui.aenny.mainpage.MainDriverActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_height="0dp"
        tools:context=".ui.aenny.ongonigtrip.SecondStepMapActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17.5"
        android:orientation="vertical"
        android:background="@drawable/ic_square"
        android:weightSum="20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/ic_r_green"
            android:layout_marginRight="97.5dp"
            android:layout_marginLeft="97.5dp"
            android:orientation="vertical"
            android:weightSum="3.5"
            >

            <TextView
                android:id="@+id/moneysum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:text="450"
                android:textSize="37.8sp"
                android:textColor="#ffffff"
                android:gravity="center"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Riyal Saudi"
                android:textSize="8.9sp"
                android:textColor="#ffffff"
                android:gravity="center"
                ></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"

            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3.5"
                >

                <TextView
                    android:id="@+id/kmsum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="120"
                    android:textSize="17sp"
                    android:textColor="#3a3a39"
                    android:gravity="center"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Km"
                    android:textSize="10sp"
                    android:textColor="#35af6a"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3.5"
                >

                <TextView
                    android:id="@+id/minsum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="40"
                    android:textSize="17sp"
                    android:textColor="#3a3a39"
                    android:gravity="center"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Min"
                    android:textSize="10sp"
                    android:textColor="#35af6a"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3.5"
                >

                <TextView
                    android:id="@+id/waitsum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="6"
                    android:textSize="17sp"
                    android:textColor="#3a3a39"
                    android:gravity="center"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Wait"
                    android:textSize="10sp"
                    android:textColor="#35af6a"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3.5"
                >

                <TextView
                    android:id="@+id/riders"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="2"
                    android:textSize="17sp"
                    android:textColor="#3a3a39"
                    android:gravity="center"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Riders"
                    android:textSize="10sp"
                    android:textColor="#35af6a"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3.5"
                >

                <TextView
                    android:id="@+id/escort"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="3"
                    android:textSize="17sp"
                    android:textColor="#3a3a39"
                    android:gravity="center"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Escort"
                    android:textSize="10sp"
                    android:textColor="#35af6a"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_green_line"
            android:tint="#35af6a"
            ></ImageView>



       <!-- <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            >-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/ic_drop_off_and_pick"></ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical"
                android:weightSum="4"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3.5"
                    >

                    <TextView
                        android:id="@+id/plbl"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Pickup"
                        android:textColor="#3a3a39"
                        android:textSize="9.6sp"
                        android:gravity="left|center_vertical"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/pickupcity"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"


                        android:text="Riyadh"
                        android:textColor="#35af6a"
                        android:textSize="12.5sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right|center_vertical"
                        android:textStyle="bold"></TextView>

                </LinearLayout>



                <TextView
                    android:id="@+id/pickup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"

                    android:text="Lorem Epsom dolor sit amet, consectetur"
                    android:textColor="#3a3a39"
                    android:textSize="11.5sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_black_line"

                    ></ImageView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3.5"
                    >

                    <TextView
                        android:id="@+id/dlbl"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"


                        android:text="drop off"
                        android:textColor="#3a3a39"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="9.6sp"
                        android:gravity="left|center_vertical"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/dropoffcity"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Riyadh"
                        android:gravity="right|center_vertical"
                        android:textColor="#35af6a"
                        android:textSize="12.5sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>



                <TextView
                    android:id="@+id/dropoff"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"


                    android:text="Lorem Epsom dolor sit amet, consectetur"
                    android:textColor="#3a3a39"
                    android:textSize="11.5sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left|center_vertical"
                    android:textStyle="bold"></TextView>



            </LinearLayout>

        </LinearLayout>

       <!-- </ScrollView>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_green_line"
            android:tint="#35af6a"
            ></ImageView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="8.5"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="3.5"
            >



            <TextView
                android:id="@+id/clientname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Mohamed Ahmed Ali"
                android:textSize="15.1sp"
                android:textStyle="bold"
                android:textColor="#35af6a"
                android:gravity="left|center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"

                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="6"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:weightSum="5"

                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"

                    >

                    <ImageView
                        android:id="@+id/diss"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical|left"
                        android:src="@drawable/ic_diss"
                        ></ImageView>

                    <ImageView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical|left"
                        android:src="@drawable/ic_female_"
                        ></ImageView>

                    <TextView
                        android:id="@+id/birthday"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="38dp"
                        android:layout_margin="3dp"

                        android:text="31 year"
                        android:textColor="#3a3a39"
                        android:textSize="12.1sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_chat"
                    ></ImageView>

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_call"
                    ></ImageView>

            </LinearLayout>

            <RatingBar
                android:id="@+id/clientrating"
                android:layout_width="250dp"
                android:layout_height="55dp"

                android:padding="6dp"

                android:isIndicator="false"
                android:numStars="5"
                android:layout_gravity="center"


                android:progressTint="#ddd91a"></RatingBar>

            <EditText
                android:id="@+id/clientcomm"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/ic_edittext_bg"
                android:hint=" Tell us why?"
                android:textColorHint="#b6b4ba"
                android:textSize="18.3sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:visibility="invisible"
                ></EditText>

        </LinearLayout>













        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:visibility="gone"
            ></LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            ></LinearLayout>


        <Button
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textStyle="bold"
            android:textSize="19.5sp"
            android:textColor="#fff"
            android:background="@drawable/ic_green_button"
            android:layout_gravity="center"
            android:layout_marginRight="95dp"
            android:layout_marginLeft="95dp"
            android:text="Finish"
            ></Button>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            ></LinearLayout>




    </LinearLayout>

</LinearLayout>